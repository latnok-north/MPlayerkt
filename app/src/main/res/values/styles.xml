<resources>

    <attr format="reference" name="default_album_drawable" />
    <attr format="reference" name="default_artist_drawable" />
    <!-- Base application theme. -->

    <style name="ThemeBaseLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/selected_day_background</item>
        <!--toolbar标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="default_album_drawable">@mipmap/icon_album_default</item>
        <item name="default_artist_drawable">@mipmap/icon_singer_default</item>
    </style>

    <style name="ThemeBaseDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/selected_day_background</item>
        <!--toolbar标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="default_album_drawable">@mipmap/icon_album_dark</item>
        <item name="default_artist_drawable">@mipmap/icon_singer_dark</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
